<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tguide.Reflection">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tguide_background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/selfReflection"
        android:textColor="@color/mdtp_date_picker_text_normal"
        android:textSize="16sp" />


    <!-- Layout containing seek bar stuff -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#a281c7"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/playAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:contentDescription="@string/PlayAudio"
                android:background="@drawable/cirlceimagebutton"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/pauseAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/cirlceimagebutton"
                android:contentDescription="@string/PauseAudio"
                android:src="@android:drawable/ic_media_pause"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/mdtp_background_color"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:thumbTint="@color/mdtp_background_color" />
    </LinearLayout>

</LinearLayout>
