<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.tguide.WeeklyCheckList">

        <!-- Create layouts for list -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="50dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/check1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/cirlce" />

        <TextView
            android:id="@+id/textbox1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/checkBox1"
            android:layout_toRightOf="@+id/check1"
            android:paddingEnd="0dp"
            android:paddingStart="15dp"
            android:text="@string/medChecklist"
            android:textColor="@color/mdtp_ampm_text_color"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:buttonTint="@android:color/holo_green_light"
            android:gravity="center_vertical"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/check2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cirlce"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appChecklist"
            android:layout_toEndOf="@+id/check2"
            android:textColor="@color/mdtp_ampm_text_color"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textSize="18sp"/>

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:buttonTint="@android:color/holo_green_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/check3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cirlce"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/infoChecklsit"
            android:layout_toEndOf="@+id/check3"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textSize="18sp"
            android:textColor="@color/mdtp_ampm_text_color"/>

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:buttonTint="@android:color/holo_green_light"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/check4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cirlce"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reflectCheclist"
            android:layout_toEndOf="@+id/check4"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            android:textSize="18sp"
            android:textColor="@color/mdtp_ampm_text_color"/>

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:buttonTint="@android:color/holo_green_light"/>
    </RelativeLayout>

    <!-- Create Button to Refresh Checklist -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/refreshChecklist"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@android:drawable/stat_notify_sync"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </RelativeLayout>

</LinearLayout>
